<%- include ("../partials/header"); %>

<div class="contained">
    <form action="/dogs" method="POST">
        <div class="form-group">
            <label>Pet ID</label>
            <input type="text" name="dogs[petId]" placeholder="PetId">
        </div>
         <div class="form-group">
             <label>Name</label>
             <input type="text" name="dogs[name]" placeholder="Name">
         </div>
         <div class="form-group">
             <label>Sex</label>
             <input type="text" name="dogs[sex]" placeholder="Sex">
         </div>
         <div class="form-group">
             <label>Breed</label>
             <input type="text" name="dogs[breed]" placeholder="Breed">
         </div>
         <div class="form-group">
             <label>Age</label>
             <input type="text" name="dogs[age]" placeholder="Age">
         </div>
         <div class="form-group">
             <label>Intake Date</label>
             <input type="date" name="dogs[intake]">
         </div>
         <div class="form-group">
             <label>Altered?</label>
             <select class="form-control">
                 <option>Yes</option>
                 <option>No</option>
             </select>
         </div>
         <div class="form-group">
             <label>Altered Date</label>
             <input type="date" name="dogs[alteredDate]">
         </div>
         <div class="form-group">
             <label>Comments</label>
             <textarea class="form-control" rows="3" name="dogs[body]"></textarea>
         </div>
        <input class="btn btn-primary" type="submit">
    </form>  
</div>




<%- include ("../partials/footer") %>