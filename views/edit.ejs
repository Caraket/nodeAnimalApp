<%- include ("partials/header"); %>

<div class="contained">
    <form class="ui form" action="/<%= animal._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Name</label>
            <input type="text" name="animal[name]" value="<%= animal.name %>">
        </div>
        <div class="field">
            <label>Sex</label>
            <input type="text" name="animal[sex]" value="<%= animal.sex %>">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="animal[image]" value="<%= animal.image %>">
        </div>
        <div class="field">
            <label>Intake Date</label>
            <input type="date" name="animal[intake]" value="<%= animal.intake %> ">
        </div>
        <div class="field">
            <label>Fixed?</label>
            <input type="text" name="animal[fixed]" value="<%= animal.fixed %>">
        </div>
        <input class="ui grey big basic button" type="submit">
    </form>  
</div>

<%- include ("partials/footer") %>