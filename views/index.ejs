<%- include ("partials/header"); %>

    <h1>Index Route</h1>
    <table class="table table-bordered table-dark">
        <tr>
                <th>Pet ID</th>
                <th>Name</th>
                <th>Breed</th>
                <th>Age</th>
                <th>Sex</th>
                <th>Altered</th>
                <th>Alter Date</th>
                <th>Intake Date</th>
        </tr>
        
            <% animals.forEach(animal => { %>
            <tr>
                <td><%= animal.petId %></td>
                <td><a href="/<%= animal._id %>"><%= animal.name %></a></td>
                <td><%= animal.breed %></td>
                <td><%= animal.age %></td>
                <td><%= animal.sex %></td>
                <td><%= animal.altered %></td>
                <td><%= animal.alteredDate %></td>
                <td><%= animal.intake %></td>
            </tr>
            <% }) %>
        
        

        
    </table>
    <a class="btn btn-dark" href="/new">Add New Animal</a>
    
    



<%- include ("partials/footer"); %>