<%- include ("partials/header") %>
<div class="contained">
    <div>
        <div class="jumbotron">
            <h1><%= animal.name %></h1>
            <h3>Pet ID: <%= animal.petId %></h3>
            
            <span class="font-weight-bold">Intake Date: <% if(animal.intake != null){ %><%= animal.intake.toDateString() %></span>
            <% } %>
        </div>
            <div class="ui top attached">
                <div class="item">
                <img class="ui centered rounded image" src="<%= animal.image %>">
                <p> Sex:  <%= animal.sex %> </p>
                <p>Breed: <%= animal.breed %></p>
                <p>Age: <%= animal.age %></p>
                <p>Altered: <%= animal.altered %></p>
                <p>Alter Date: <%= animal.alteredDate%></p>
                <p>Comments: <%= animal.body %></p>
                <div class="content">
                <span>Created: <%= animal.created.toDateString() %></span>
                
            </div>
            <a class="btn btn-primary" href="/<%= animal._id %>/edit">Edit</a>
            <form actions="/animal/<%= animal._id %>?_method=DELETE" method="POST">
                <a class="btn btn-danger" href="<%= animal._id%>">Delete</a>
            </form>
        </div>
    </div>
</div>
</div>





<%- include ("partials/footer") %>